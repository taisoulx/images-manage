{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "图片管理软件",
  "version": "0.1.0",
  "identifier": "com.images-manage.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "图片管理软件",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "publisher": "Images Manage",
    "copyright": "Copyright © 2025",
    "category": "Graphics",
    "shortDescription": "跨平台图片管理系统",
    "longDescription": "图片管理软件是一个跨平台图片管理系统，支持万张级图片的高效管理和智能搜索，适用于Windows和macOS系统。",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
